# ==========================================
# Core Runtime
# ==========================================
# NODE_ENV: enum(development|production|test)
NODE_ENV=development

# ADMIN_KEY: string (required)
ADMIN_KEY=change-me

# AUTH_SECRET: string (optional, recommended for signed auth/session flows)
AUTH_SECRET=change-me

# ==========================================
# Data Residency Model
# ==========================================
# DATA_STORE_PROVIDER: enum(auto|postgres)
# - postgres: force Postgres-backed KV store (recommended)
# - auto: prefer Postgres when DATABASE_URL exists, fallback otherwise
DATA_STORE_PROVIDER=postgres

# DATA_MODE: enum(remote|local|test)
# - remote: reads from managed store first (Postgres/file/memory), remote CSV fallback
# - local: reads from local file fallback only (data/events.csv)
# - test: reads hardcoded demo dataset
DATA_MODE=remote

# GOOGLE_MIRROR_WRITES: boolean (default false)
GOOGLE_MIRROR_WRITES=false

# ==========================================
# Postgres (Neon / Vercel Postgres)
# ==========================================
# DATABASE_URL: string URL (required for Postgres provider)
DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# DATABASE_URL_UNPOOLED: string URL (optional)
DATABASE_URL_UNPOOLED=postgresql://user:pass@host:5432/dbname?sslmode=require

# Optional provider metadata vars (used by some tools/platform integrations)
PGHOST=
PGHOST_UNPOOLED=
PGUSER=
PGDATABASE=
PGPASSWORD=
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=
POSTGRES_URL_NO_SSL=
POSTGRES_PRISMA_URL=

# ==========================================
# Remote CSV / Google Fallback (Optional)
# ==========================================
REMOTE_CSV_URL=
GOOGLE_SHEETS_API_KEY=
GOOGLE_SHEET_ID=
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_SERVICE_ACCOUNT_FILE=service-account.json
GOOGLE_SHEETS_URL=
GOOGLE_MAPS_API_KEY=

# ==========================================
# Cache
# ==========================================
CACHE_DURATION_MS=3600000
REMOTE_REFRESH_INTERVAL_MS=1800000
MAX_CACHE_AGE_MS=86400000
CACHE_EXTENSION_DURATION_MS=7200000
LOCAL_CSV_LAST_UPDATED=2026-02-17

# ==========================================
# Public Client Env
# ==========================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_PATH=
