# ==========================================
# Core Runtime
# ==========================================
# NODE_ENV: development | production | test
NODE_ENV=development

# ADMIN_KEY: admin login key for /admin
ADMIN_KEY=change-me

# AUTH_SECRET: signing secret for admin JWT + cookie signatures
AUTH_SECRET=change-me

# ==========================================
# Data Modes
# ==========================================
# DATA_MODE:
# - remote: Postgres store first, local CSV fallback if store is unavailable
# - local: local CSV only (data/events.csv)
# - test: hardcoded dataset only
DATA_MODE=remote

# GOOGLE_MIRROR_WRITES:
# Optional mirror of collected users to Apps Script endpoint
GOOGLE_MIRROR_WRITES=false

# ==========================================
# Postgres (Neon / Vercel Postgres)
# ==========================================
# Required for remote mode source-of-truth storage
DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# Optional unpooled connection (migrations / long-lived operations)
DATABASE_URL_UNPOOLED=postgresql://user:pass@host:5432/dbname?sslmode=require

# Optional provider metadata vars (Vercel/Neon convenience)
PGHOST=
PGHOST_UNPOOLED=
PGUSER=
PGDATABASE=
PGPASSWORD=
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=
POSTGRES_URL_NO_SSL=
POSTGRES_PRISMA_URL=

# ==========================================
# Google Backup / Import Source (Optional)
# ==========================================
# Used by admin-only "Preview Google Backup" and "Import Google Backup"
REMOTE_CSV_URL=
GOOGLE_SHEET_ID=
GOOGLE_SERVICE_ACCOUNT_KEY=
GOOGLE_SERVICE_ACCOUNT_FILE=service-account.json

# Used by Apps Script integration (email mirror / legacy admin integrations)
GOOGLE_SHEETS_URL=

# Used by geocoding flows
GOOGLE_MAPS_API_KEY=

# ==========================================
# Cache Tuning
# ==========================================
CACHE_DURATION_MS=3600000
REMOTE_REFRESH_INTERVAL_MS=1800000
MAX_CACHE_AGE_MS=86400000
CACHE_EXTENSION_DURATION_MS=7200000
LOCAL_CSV_LAST_UPDATED=2026-02-17

# ==========================================
# Public Client Env
# ==========================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_PATH=
